// HydroService class (Electricity, Water, Sewerage)
class HydroService: public UtilityService {
private:
    string hydroType; // "Electricity", "Water", or "Sewerage"

public:
    // Constructor allows different pricing per provider and type of hydro service
    HydroService(string type, int pID, double base, double meter)
        : UtilityService(type, pID, base, meter), hydroType(type) {}

    // Bill calculation based on usage
    double calculateBill(double usage) override {
        return baseRate + (meterRate * usage);
    }

    // Display service details
    void displayServiceDetails() override {
        cout << hydroType << " Service - Provider " << providerID
             << ": Base Rate = $" << baseRate << ", Per Unit = $" << meterRate << endl;
    }
};
